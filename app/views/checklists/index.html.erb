<div>
  <h1>To-Do List</h1>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>To-Do Title</th>
      <th>Age</th>
      <th><span class="pull-right">Actions</span></th>
    </tr>
  </thead>
  <tbody>
  <% @checklists.each_with_index do |checklist, index| %>
    <% unless checklist.title.blank? %>
      <tr>
        <td><%= index + 1  %>. <%= checklist.title %></td>
        <td><%= time_ago_in_words(checklist.created_at) %> old</td>
        <td>
          <%= link_to(
            checklist,
            method: :delete,
            :class => "btn btn-info pull-right",
            :data => {
              :toggle => "tooltip",
              :placement => "top",
              :title => "Complete & Delete Item"}) do %>
            <i class="glyphicon glyphicon-ok"></i>
          <% end %>

        </td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

<div class="row">
  <div class="col-xs-12">
    <div class="">
       <% if current_user %>
         <div class='new-item'>
           <%= render 'checklists/form', checklist: @checklist %>
         </div>
       <% end %>
    </div>
  </div>
</div>
