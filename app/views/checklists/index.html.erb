<div class="page-header">
  <h1>My To-Do List <small>(there's always something...)</small></h1>
</div>
<table class="table table-striped">
  <% @checklists.each do |checklist| %>
    <% unless checklist.title.blank? %>
      <tr>
        <td><%= checklist.title %></td>
      </tr>
    <% end %>
  <% end %>
</table>

<div class="row">
  <div class="col-xs-12">
    <div class="">
       <% if current_user %>
         <div class='new-item'>
           <%= render 'checklists/form', checklist: @checklist %>
         </div>
       <% end %>
    </div>
  </div>
</div>
